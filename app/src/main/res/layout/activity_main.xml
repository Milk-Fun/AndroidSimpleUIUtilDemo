<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50_dp"
        android:background="#CD661D"
        android:gravity="center"
        android:text="AndroidDefineUIUtil-Demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_toast"
        style="@style/button_style"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="显示Toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/bt_juhua_progress"
        style="@style/button_style"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="显示菊花进度条，持续5秒"
        app:layout_constraintStart_toEndOf="@+id/bt_toast"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>